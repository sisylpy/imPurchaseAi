


/* 快速选择样式 */
.quick-select-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.quick-select-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.quick-select-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.quick-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
  min-width: 120rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.3);
}

.quick-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(102, 126, 234, 0.3);
}

