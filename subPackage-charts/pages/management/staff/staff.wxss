/* 采购员卡片容器 */
.user-card-wrapper {
  position: relative;
}

/* 采购员信息卡片 */
.user-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.user-info-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
}

/* 卡片头部 */
.user-info-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.user-self-tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 10rpx;
}

.user-menu-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 采购统计 */
.user-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.user-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 15rpx 20rpx;
  border-radius: 12rpx;
  flex: 1;
  margin: 0 5rpx;
  backdrop-filter: blur(10rpx);
}

.user-stat-item:first-child {
  margin-left: 0;
}

.user-stat-item:last-child {
  margin-right: 0;
}

.user-stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.user-stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

/* 按钮样式 */
button {
  background: none;
  border: none;
  background-color: none;
  line-height: 50rpx;
  border-radius: 40rpx;
}

button::after { 
  border: none; 
}
