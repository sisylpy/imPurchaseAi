/* ============ 采购页面专用样式 - 蓝色主题 ============ */

/* 采购批次行容器 */
.purchase-row-container {
  transition: all 0.3s ease-in-out;
  position: relative;
}

/* 商品级别采购批次列表容器 */
.goods-purchase-list {
  background: linear-gradient(135deg, #f8f9ff 0%, #e6f0ff 100%);
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(74, 144, 226, 0.1);
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
  position: relative;
  overflow: hidden;
}

.goods-purchase-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4A90E2 0%, #2E7CE6 50%, #4A90E2 100%);
  border-radius: 16rpx 16rpx 0 0;
}

/* 商品采购批次列表标题 */
.goods-purchase-list-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
  padding-bottom: 10rpx;
}

.goods-purchase-list-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #4A90E2 50%, transparent 100%);
}

/* 采购批次行基础样式 */
.purchase-row {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  /* 三栏布局 */
  justify-content: space-between;
}

.purchase-row::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 6rpx;
  height: 60%;
  background: linear-gradient(180deg, #e3f2fd 0%, #e3f2fd 100%);
  border-radius: 0 6rpx 6rpx 0;
  transform: translateY(-50%);
  transition: all 0.3s ease;
}


/* hover效果 */
.purchase-row:hover::after {
  opacity: 1;
  transform: scale(1.1);
}

/* 激活状态的采购行 */
.purchase-row-active {
  border-color: #4A90E2;
  border-radius: 16rpx 16rpx 0 0 !important; /* 激活时只保留顶部圆角 */
  border-bottom: none !important; /* 移除底部边框，连接展开区域 */
  box-shadow: none !important; /* 移除阴影，避免视觉间隙 */
  transform: translateY(0); /* 移除位移，保持平齐 */
}

.purchase-row-active::before {
  background: linear-gradient(180deg, #4A90E2 0%, #2E7CE6 100%);
}

/* 采购信息卡片 */
.purchase-info-card {
  background: #ffffff !important; /* 白色背景 */
  border: 2rpx solid #4A90E2 !important; /* 蓝色边框 */
