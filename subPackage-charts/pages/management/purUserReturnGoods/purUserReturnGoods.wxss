
/* 统计卡片容器 */
.stats-container {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin: 20rpx 40rpx 30rpx 40rpx;
  transition: all 0.3s ease-in-out;
}

/* 隐藏日期选择行 */
.hidden {
  display: none !important;
}


/* 页面容器样式 */
.page-container {
  width: 100%;
  display: block;
  overflow: visible;
  margin-top: 0;
  transition: margin-top 0.3s ease;
}

/* 滚动状态下的页面容器 */
.page-container.scrolled {
  margin-top: -100rpx; /* 滚动时向上移动，补偿隐藏的日期行空间 */
}

.stat-card {
  flex: 1;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 20rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  user-select: none;
  backdrop-filter: blur(10rpx);
}

.stat-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.15);
}


/* 激活状态的卡片 */
.stat-card-active {
  border: 2rpx solid #05c0a7;
  box-shadow: 0 8rpx 30rpx rgba(5, 192, 167, 0.2);
  transform: translateY(-4rpx);
}

.purchase-card {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  box-shadow: 0 8rpx 25rpx rgba(33, 150, 243, 0.15);
}

.purchase-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 20rpx;
}

.total-card {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  box-shadow: 0 8rpx 25rpx rgba(33, 150, 243, 0.15);
}

.purchase-date {
  font-size: 24rpx;
  color: #666;
}
.purchase-type{
  font-size: 24rpx;
  color: #666;
  background-color: #e3f2fd;
  border-radius: 25rpx;
  text-align: center;
  
}
.total-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 20rpx;
}

.ratio-card {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
  box-shadow: 0 8rpx 25rpx rgba(255, 193, 7, 0.15);
}

.ratio-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
