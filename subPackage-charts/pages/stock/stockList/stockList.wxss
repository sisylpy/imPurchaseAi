/* 箭头容器 */
.arrow-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.arrow-container:hover {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(1.1);
}

.arrow-container.expanded {
  /* background: rgba(5, 192, 167, 0.1); */
  background: rgba(255, 152, 0, 0.08);
  transform: rotate(90deg) scale(1.1);
}

.arrow-container.expanded:hover {
  background: rgba(5, 192, 167, 0.2);
  transform: rotate(90deg) scale(1.15);
}

.arrow-container.collapsed {
  background: rgba(0, 0, 0, 0.05);
  background: rgba(255, 152, 0, 0.08);
  transform: rotate(0deg);
}

.arrow-icon {
  opacity: 0.6;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.arrow-container.expanded .arrow-icon {
  opacity: 1;
}

/* 展开内容动画 */
.purchase-row-content {
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.purchase-row-content.expandable-content {
  max-height: 0;
  opacity: 0;
  transform: translateY(-10rpx);
  margin: 0;
  padding: 0;
}

