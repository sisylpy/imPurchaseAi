


page {
  /* font-size: 3.5vw; */
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  /* background: #f6f8f8; */
  background-color: #fff;

}

/* 时间卡片容器 */
.time-cards-container {
  background: #f5f5f5;
  padding: 20rpx;
  min-height: 100%;
}

.time-cards-grid {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 图表区域 */
.chart-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 轻量修饰 - 统一视觉风格 */
.bg-white {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.bg-white:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

/* 图表区域修饰 */
.echarts_back {
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

/* 进度条美化 */
.line_father {
  border-radius: 3rpx;
  background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
}

/* 空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  min-height: 600rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 时间段卡片 */
.time-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 卡片悬停效果 */
.time-card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 激活状态的卡片样式 */
.time-card.active {
  border-color: #e8f5e8;
  background: #f8fff8;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.time-card.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
}

/* 卡片头部 */
.time-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

/* 时间标题区域 */
.time-title-section {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 时间段图标 */
.time-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
  position: relative;
  margin-right: 8rpx;
}

/* 不同时间段的图标颜色 */
.time-icon.all-stock {
  background: #607D8B;
}

.time-icon.today {
  background: #4CAF50;
}

.time-icon.one-day {
  background: #2196F3;
}

.time-icon.two-days {
  background: #FF9800;
}

.time-icon.three-days {
  background: #F44336;
}

.time-icon.more-days {
  background: #9C27B0;
}

/* 时间段文字 */
.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 库存金额区域 */
.stock-amount-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex: 1;
}

.stock-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

/* 进度条容器 */
.progress-container {
  width: 120rpx;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

/* 进度条 */
.progress-bar {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-bar.all-stock {
  background: #607D8B;
}

.progress-bar.today {
  background: #4CAF50;
}

.progress-bar.one-day {
  background: #2196F3;
}

.progress-bar.two-days {
  background: #FF9800;
}

.progress-bar.three-days {
  background: #F44336;
}

.progress-bar.more-days {
  background: #9C27B0;
}

