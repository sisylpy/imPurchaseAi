/* 分类库存项样式 */
.category-stock-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.category-stock-item:hover {
  background-color: #f8f9fa;
}

/* 左侧：商品图片和名称 */
.category-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.category-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background-color: #f0f0f0;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

/* 右侧：库存信息 */
.category-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
  flex-shrink: 0;
}

/* 主要金额行 */
/* 库存金额行 - 主要信息 */
.stock-amount-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stock-amount-main {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}

.stock-percentage {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 商品数量信息 */
.stock-quantity {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  padding: 6rpx 0;
}

.quantity-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.quantity-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 过期信息 - 重要警告 */
.waste-amount {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 12rpx;
  background: linear-gradient(135deg, #fff2f0 0%, #ffe7e7 100%);
  border-radius: 8rpx;
  border: 2rpx solid #ffccc7;
  margin-top: 8rpx;
}

.waste-label {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 600;
  text-align: center;
  margin-bottom: 4rpx;
}

.waste-value {
  font-size: 24rpx;
  font-weight: 500;
  color: #ff4d4f;
  text-align: center;
  line-height: 1.3;
}

/* 环形图样式 */
.donut-chart-container {
  margin-left: 12rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.donut-chart {
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 环形图中心白色圆形 - 借鉴costGoodsByDate.wxss的实现 */
.donut-chart::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60%;
  height: 60%;
  background-color: white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.donut-percent {
  font-size: 18rpx;
  font-weight: bold;
  color: #333;
  z-index: 2;
  position: relative;
  line-height: 1;
}
