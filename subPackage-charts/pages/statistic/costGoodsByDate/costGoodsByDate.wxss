  gap: 20rpx !important;
}

.price-container {
  display: flex !important;
  flex-direction: column !important;
  align-items: flex-end !important;
  background: linear-gradient(135deg, #f8f9ff 0%, #e6f0ff 100%) !important;
  padding: 12rpx 20rpx !important;
  border-radius: 12rpx !important;
  border: 1rpx solid rgba(74, 144, 226, 0.1) !important;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.05) !important;
  transition: all 0.3s ease !important;
}

.price-container:hover {
  background: linear-gradient(135deg, #e6f0ff 0%, #d1e7ff 100%) !important;
  border-color: rgba(74, 144, 226, 0.2) !important;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.1) !important;
  transform: translateY(-2rpx) !important;
