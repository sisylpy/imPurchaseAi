/* 成本卡片基础样式 */
.cost-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 25rpx 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  flex: 1;
  min-width: 0;
  max-width: calc(33.333% - 7rpx);
  box-sizing: border-box;
  cursor: pointer;
  user-select: none;
}

/* 收缩状态的成本卡片 */
.cost-card.collapsed {
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  width: auto;
  height: auto;
  min-width: 0;
  max-width: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  margin: 0 5rpx;
}

.cost-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #e9ecef 0%, #e9ecef 100%);
  transition: all 0.3s ease;
}

/* 激活状态的卡片样式 */
.cost-card-active {
  border-color: #05c0a7;
  box-shadow: 0 8rpx 30rpx rgba(5, 192, 167, 0.2);
  transform: translateY(-4rpx);
}

.cost-card-active::before {
  background: linear-gradient(90deg, #05c0a7 0%, #048a7a 100%);
}

/* 卡片头部 */
.cost-card-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15rpx;
  text-align: center;
}

/* 图标样式 */
.cost-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  position: relative;
  transition: all 0.3s ease;
}

/* 收缩状态下的图标 */
.cost-card.collapsed .cost-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

/* 收缩状态下的文字 */
.cost-title-collapsed {
  font-size: 20rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sales-icon {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
}

.loss-icon {
  background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
}

.waste-icon {
  background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
}

.icon-image {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
  transition: all 0.3s ease;
}

/* 收缩状态下的图标图片 */
.cost-card.collapsed .icon-image {
  width: 24rpx;
  height: 24rpx;
}

/* 卡片标题 */
.cost-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 金额显示 */
.cost-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #05c0a7;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(5, 192, 167, 0.1);
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 详细信息区域 */
.cost-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 5rpx;
}

.cost-subtitle {
  font-size: 18rpx;
  color: #666;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cost-percentage {
  font-size: 22rpx;
  font-weight: 600;
  color: #05c0a7;
  background: rgba(5, 192, 167, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  white-space: nowrap;
}

/* 总计金额 */
.cost-total {
  font-size: 18rpx;
  color: #999;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 悬停效果 */
.cost-card:active {
  transform: scale(0.98);
}

/* 响应式调整 */
