/* 蒙版 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色 */
  z-index: 999; /* 确保在弹出层下方 */
}

/* 弹出层容器 */
.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
