.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f9f9f9;
}

.reminder-box {
  padding: 30px;
  background-color: #fff;
  border-radius: 15px;
  /* box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); */
  text-align: center;
  width: 80%;
  max-width: 320px;
  animation: slideIn 0.5s ease-out;
}

.reminder-text {
  font-size: 18px;
  color: #ff4e00;
  font-weight: bold;
  margin-bottom: 20px;
  line-height: 1.4;
  text-align: center;
  animation: pulse 1.5s infinite;
}

.recharge-button {
  padding: 12px 25px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 30px;
  font-size: 16px;
  width: 100%;
  transition: background-color 0.3s;
}

/* Slide-in animation */
@keyframes slideIn {
  0% {
    transform: translateY(20px);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Pulse animation for the reminder text */
@keyframes pulse {
  0% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.8;
  }
}

