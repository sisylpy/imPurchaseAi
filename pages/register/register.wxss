/* 页面整体布局 */
.flex {
  display: flex;
}
.flex-column {
  flex-direction: column;
}

/* 表单容器 */
.form-container {
  padding: 0 30rpx;
}
.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}
.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}
.form-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 34rpx;
  /* color: #666; */
}

.avatar-preview-wrap {
  margin-top: 20rpx;
  font-size: 34rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.avatar-preview {
  width: 100rpx;
  height: 100rpx;
  margin-left: 12rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  object-fit: cover;
}

/* 提交按钮 */
.submit-section {
  margin-top: 40rpx;
  padding: 0 40rpx;
}
.submit-btn {
  width: 100%;
  font-size: 34rpx;
  padding: 10rpx;
  border-radius: 12rpx;
  border: none; /* 如果需要去掉默认边框 */
  text-align: center; /* 文字居中 */
  box-sizing: border-box; /* 确保内边距不会影响宽度 */
}

/* 可提交状态 - 橙色 */
.submit-btn-active {
  background-color: #ff7200;
  color: #fff;
}

/* 禁用状态 - 灰色 */
.submit-btn-disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 同意条款区域 */
.agreement-section {
  padding: 0 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.agreement-item {
  display: flex;
  align-items: center;
}

.agreement-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.agreement-text {
  margin-left: 10rpx;
  color: #666;
}

.agreement-link {
  margin-left: 4rpx;
  color: #ff7200;
  text-decoration: underline;
}

/* 条款弹窗蒙版 */
.terms-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 条款弹窗内容 */
.terms-modal-content {
  width: 85%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 弹窗头部 */
.terms-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.terms-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.terms-modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  margin-left: 20rpx;
  cursor: pointer;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗主体内容 */
.terms-modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;

}

.terms-section {
  margin-bottom: 40rpx;
}

.terms-section:last-child {
  margin-bottom: 0;
}

.terms-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.terms-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
  width: 95%;
}

/* 弹窗底部 */
.terms-modal-footer {
  padding: 30rpx;
  border-top: 1px solid #f0f0f0;
}

.terms-confirm-btn {
  width: 100%;
  background-color: #ff7200;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  text-align: center;
}

