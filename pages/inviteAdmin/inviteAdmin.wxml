<view class="flex flex-column">

  <!-- 导航栏 -->
  <customer-navbar style="height: {{navBarHeight}}rpx;" title="{{depName}}邀请您注册" avatar="/images/logo.png" button-text="设置" bindnavbuttontap="toEditUser"></customer-navbar>

  <!-- 表单容器 -->
  <view class="flex-column font-lg" >

        <view class="flex-row form-item">

          <text class="form-label">微信头像</text>
          <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
            <image class="avatar" src="{{avatarUrl}}"></image>
          </button>
        </view>
        <view class="flex-row  form-item">
          <text class="mr-20 form-label">微信昵称</text>
          <mp-form bindsubmit="formSubmit">
            <mp-cells>
              <mp-cell title="昵称">
                <input type="nickname" bindinput="onNicknameInput" class="form-input" placeholder="微信昵称" />
              </mp-cell>
            </mp-cells>

          </mp-form>

        </view>

  </view>

  <view class="submit-section">
    <button bindtap="save" class="submit-btn {{canRegister  ? 'is-active' : ''}}">注册</button>
  </view>

</view>