

.page {
  display: flex;
  flex-direction: column;
  background-color: #f3f4f6;
  min-height: 100vh;
}

/* 顶部 Banner */
.banner-wrap {
  position: relative;
  width: 100%;
  text-align: center;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.banner-img {
  width: 100%;
  height: auto;
  /* 示例：可以固定高度也可自适应 */
}

.banner-text {
  margin-top: 10rpx;
}

.title {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 26rpx;
  color: #666;
}

/* 功能区 */
.features-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.feature-card {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.feature-info {
  flex: 1;
}

.feature-title {
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(0, 0, 0);
}

.feature-desc {
  margin-top: 6rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

/* 注册区 */
.register-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  text-align: center;
}

.register-btn {
  display: inline-block;
  background-color: #ff7200;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
}

.register-btn::after {
  border: none;
}

/* 底部提示 */
.footer-hint {
  margin-top: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
}

.footer-hint navigator {
  color: #007aff; /* 微信常用蓝色 */
  margin-left: 10rpx;
}

.features-swiper-section {
  padding: 10rpx 32rpx 0;
}

/* 标题部分 */
.section-header {
  text-align: center;
  margin-bottom: 30rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}
.section-subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* swiper本身可自定义高度、宽度 */
.feature-swiper {
  width: 100%;
  height: 500rpx;  /* 示例高度，可自行调整 */
  /* 如果想做全屏轮播，可设置为 100vh 等 */
}

.swiper-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  height: 100%;
  /* 给每个滑块一些背景或间距 */
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}



/* 额外提示 */
.extra-hint {
  margin: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
