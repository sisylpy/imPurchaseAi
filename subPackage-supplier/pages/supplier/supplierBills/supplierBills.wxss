.summary-main-value-wrapper {
  display: flex;
  align-items: baseline;
}

.summary-main-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #f5576c;
  letter-spacing: 1rpx;
}

/* 详细金额区域 */
.summary-detail {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.summary-detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.summary-detail-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.summary-detail-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.summary-value-primary {
  color: #667eea;
}

.summary-value-danger {
  color: #fa709a;
}

.summary-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e0e0e0;
}

/* 订单列表卡片 */
.bill-card {
  background: #fff;
  /* margin: 0 20rpx 20rpx; */
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.bill-card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-tags {
  display: flex;
  gap: 8rpx;
}

.bill-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.tag-return {
  background: #ffe5e5;
  color: #f5576c;
}

.status-uninvoiced {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFCCCC 100%);
  color: #FF6B6B;
  border-color: rgba(255, 107, 107, 0.2);
}
.tag-auto {
  background: #fff3e0;
  color: #ff9800;
}
.tag-purchase{
  background: #deecfc;
  color: #007aff;
}
.bill-arrow {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.5;
}

/* 订单内容 */
.bill-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.bill-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 日期信息 */
.bill-date {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.date-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.week-text {
  font-size: 24rpx;
  color: #999;
}

/* 金额信息 */
.bill-amount {
  display: flex;
  align-items: baseline;
}

.amount-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
}

/* 状态行 */
.bill-status-row {
  display: flex;
  align-items: center;
}

.status-badge {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-uninvoiced {
  background: #ffe5e5;
  color: #f5576c;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-settled {
  background: #e8f5e9;
  color: #11998e;
}

