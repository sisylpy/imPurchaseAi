  justify-content: space-between;
}

.purchase-row::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 6rpx;
  height: 60%;
  background: linear-gradient(180deg, #e3f2fd 0%, #e3f2fd 100%);
  border-radius: 0 6rpx 6rpx 0;
  transform: translateY(-50%);
  transition: all 0.3s ease;
}


