

page{
  background: #f5f5f5;
}


/* 供货商卡片容器 */
.supplier-card-wrapper {
  padding: 20rpx;
  position: relative;
}

/* 经销商标签 */
.distributor-tag {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  margin-bottom: 10rpx;
  width: fit-content;
  margin-left: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tag-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #999;
}

/* 供货商信息卡片 */
.supplier-info-card {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
  transition: all 0.3s ease;
}

.supplier-info-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(255, 154, 158, 0.4);
}

/* 卡片头部 */
.supplier-info-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.supplier-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.supplier-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.supplier-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.supplier-menu-btn {
  background: rgba(255, 255, 255, 0.6);
  padding: 12rpx;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-btn-hover {
  background: rgba(255, 255, 255, 0.8);
}

button{
  font-size: 32rpx;
}
.menu-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 订单统计 */
.supplier-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.supplier-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  padding: 15rpx 20rpx;
  border-radius: 12rpx;
  flex: 1;
  margin: 0 5rpx;
  backdrop-filter: blur(10rpx);
}

.supplier-stat-item:first-child {
  margin-left: 0;
}

.supplier-stat-item:last-child {
  margin-right: 0;
}

.supplier-stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.supplier-stat-count {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.supplier-stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-value-primary {
  color: #667eea;
}

.stat-value-success {
  color: #11998e;
}

/* 付款详情 */
.payment-detail {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
}

.payment-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  padding: 12rpx 8rpx;
  border-radius: 10rpx;
}

.payment-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.payment-count {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.payment-value {
  font-size: 26rpx;
  font-weight: 700;
}

.payment-success {
  color: #11998e;
}

.payment-warning {
  color: #f5576c;
}

.payment-danger {
  color: #fa709a;
}

.ml-20 {
  margin-left: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}