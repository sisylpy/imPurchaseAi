<view class='mask' wx:if='{{show}}' catchtouchmove='ture' >
	<view class='flex-column' style=" margin-top:{{windowHeight / 7}}rpx;">
		<view class="top">
			<view class='goodsTitle flex-row p-20'>
				<text class="brand" wx:if="{{item.gbDgGoodsBrand.length > 0 && item.gbDgGoodsBrand !== 'null'}}">{{item.gbDgGoodsBrand}}</text>
				<text  style="font-size: {{item.gbDgGoodsName.length > 5 ? '40' : '50'}}rpx;">{{item.gbDgGoodsName}}</text>
				<text  style="font-size: {{item.gbDgGoodsName.length > 5 ? '30' : '40'}}rpx;" wx:for="{{item.gbDgDistributerAliasEntities}}" wx:for-item="alias" wx:key="gbDgDaAliasId" >@{{alias.gbDgDaAliasName}}</text>
				<block wx:if="{{item.gbDgGoodsStandardWeight !== 'null' && item.gbDgGoodsStandardWeight.length > 0}}">
					<text style="font-size: {{item.gbDgGoodsName.length > 5 ? '40' : '50'}}rpx;" wx:if="{{item.gbDgGoodsStandardname !== '斤'}}">({{item.gbDgGoodsStandardWeight}}/{{item.gbDgGoodsStandardname}})</text>
				</block>
				<block wx:else>
					<text  style="font-size: {{item.gbDgGoodsName.length > 5 ? '40' : '50'}}rpx;" wx:if="{{item.gbDgGoodsStandardname !== '斤'}}">({{item.gbDgGoodsStandardname}})</text>
				</block>
			</view>
		</view>

		<view class="flex-column" style="background-color: #fff;">
			<view class=''>
				<view class="flex_row_between" style=" padding: 20rpx 20rpx;">
					<text class="explain">数量</text>
				
						<input class='numberInput' focus='true' type='digit' value="{{applyNumber}}" bindinput="getApplyNumber" hold-keyboard='true'></input>
				
				</view>

        

				<view class="flex-row-default" style="padding: 20rpx 20rpx;">
					<text class="explain shrink_fix">单位</text>
					<view class=" flex-row-wrap shrink_change " >
						<text class="standardName {{applyStandardName == item.gbDgGoodsStandardname ? 'is-active' : ''}}" bindtap="changeStandard" data-name="{{item.gbDgGoodsStandardname}}" >{{item.gbDgGoodsStandardname}}</text>

						<text  class="standardName {{applyStandardName == standard.gbDsStandardName ? 'is-active' : ''}}" bindtap="changeStandard" data-name="{{standard.gbDsStandardName}}" catchlongpress="delStandard" data-id="{{standard.gbDistributerStandardId}}"   wx:for="{{item.gbDistributerStandardEntities}}" wx:key="gbDgDistributerStandardId"
            wx:for-item="standard">{{standard.gbDsStandardName}}</text>
            <text class="standardName" bindtap="showInputStandard"> +</text>
					</view>

				</view>
        <view class="flex_row_between" wx:if="{{showAddStandard}}" style="padding: 20rpx 20rpx; ">
          <text class="explain" style="width: 300rpx;">添加规格</text>
					<view class="flex_row_between" style="width: {{windowWidth - 300}}rpx; " >
						<input class="standardInput"  focus="{{showAddStandard ? 'true' : ''}}" bindinput="addStanard" value="{{newStandardName}}"></input>
             <view class="flex-row" style="width: 200rpx;">
              <text class='cancel-btn-standard p-10' bindtap="cancleStandard" hover-class="hoverBtn">关闭</text>
              <text class='confirm-btn-standard p-10' catchtap='confirmStandard' hover-class="hoverBtn" style="margin-left: 30rpx;">保存</text>
             </view>
					</view>
        </view>

				<view class="flex_row_between" style="padding: 20rpx 20rpx;">
					<text class="explain">备注</text>
					<view class="rightPart">
						<input class="remarkInput" bindinput="addRemark" value="{{applyRemark}}"></input>
					</view>
				</view>
        
          <view class="flex_row_between" style="padding: 20rpx 20rpx;" wx:if="{{!editApply}}">
            <text class="explain">库存清零</text>
					 <view  class="">
          <switch checked="{{stockIsZero}}" bindchange="changeStock"/>
          </view>
				</view>
			</view>

			<view class='' style="padding: 20rpx 20rpx; ">
				<view class="flex-row-between"  style="margin-left: {{editApply ? '20' : windowWidth / 4}}rpx;  padding: 20rpx 0; ">
          <text class="btn del-btn" wx:if="{{editApply}}" bindtap="delApply" style="width: {{windowWidth / 5}}rpx;  ">删除订单</text>
         
					<text class='btn cancel-btn' bindtap="cancle" hover-class="hoverBtn" style="width: {{windowWidth / 5}}rpx; text-align: center; margin-left: 10rpx;">取消</text>
          <text class='btn {{canSave ? "confirm-btn" : "cancel-btn"}}' catchtap='{{canSave ? "confirm" : ""}}' hover-class="hoverBtn" style="width: {{windowWidth / 5}}rpx; text-align: center; margin-left: 40rpx; margin-right: 20rpx;">确定</text>
				</view>
        
			</view>
		</view>

	</view>
</view>