

.custom-navbar {
  position: fixed; /* 固定定位 */
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1px solid lightgray;
  z-index: 999; /* 确保导航栏位于最上层 */
}

.nav-container {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 50rpx;
  height: 50rpx;
  /* border-radius: 32rpx; */
  margin-left: 10rpx;
}


.nav-left, .nav-right {
  display: flex;
  align-items: center;
}

.nav-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-title-large {
  font-size: 48rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1.2;
}

.nav-title {
  font-size: 24rpx;
  color: #666666;
  margin-top: 4rpx;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.nav-button {
  background-color: transparent;
  border: none;
  font-size: 32rpx;
  padding: 0 20rpx;
}

/* 导航栏按钮容器 */
.nav-buttons-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
}

/* 导航栏小按钮 */
.nav-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 8rpx 12rpx;
  border-radius: 12rpx; /* 与大按钮保持一致 */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #ffffff; /* 纯白色背景，与大按钮一致 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
  margin: 0 4rpx;
  min-width: 0;
  box-sizing: border-box;
  height: 60rpx; /* 固定高度，确保不超出导航栏 */
  backdrop-filter: blur(10rpx);
}

.nav-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #e9ecef 0%, #e9ecef 100%);
  transition: all 0.3s ease;
}

.nav-button-active {
  border-color: #05c0a7;
  box-shadow: 0 4rpx 20rpx rgba(5, 192, 167, 0.15);
  transform: translateY(-1rpx);
}

.nav-button-active::before {
  background: linear-gradient(90deg, #05c0a7 0%, #05c0a7 100%);
}

.nav-button-text {
  font-size: 22rpx; /* 稍微增大字体，因为没有图标了 */
  color: rgba(0, 0, 0, 0.8); /* 与大按钮文字颜色一致 */
  font-weight: 600;
  white-space: nowrap;
  line-height: 1;
  text-align: center;
}

