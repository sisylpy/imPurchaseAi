<view class='mask' wx:if='{{show}}' catchtouchmove='ture' style="height:{{maskHeight}}rpx;top:-{{scrollViewTop}}px;">
	<view class='modal-content' style=" margin-top:{{scrollViewTop}}px;">

		<view class="top">
			<view class='goodsTitle flex-row'>
				<text>退货总款</text>
			</view>
		</view>

		<view class="body">
			<view class='goods_contents'>

				<view class="flex_row_between p-20" style="font-size: 45rpx;">
					<text class="explain">金额</text>
					<view class="rightPart">
						<text>{{item.gbDpbPaySubtotal}}元</text>
					</view>
				</view>

				<view class="flex_row_between p-20 time_part">
					<text class="explain">付款</text>
					<view class="rightPart">
						<radio-group class="radio-group" >
						<label class="radio"><radio disabled="true" value="0" checked="{{item.gbDpbPayType == 0}}" />现金</label>
						<label class="radio"><radio disabled="true" value="1" checked="{{item.gbDpbPayType == 1}}" />记账</label>
						</radio-group>
					</view>
				</view>

        <!-- <view wx:if="{{item.gbDpbPayType == 0}}"> -->
          <view class="flex_row_between p-20">
          <text class="explain">微信好友:</text>
          <view class="flex-row">
            <image class="url mr-20" src="{{url + item.nxJrdhSellerEntity.jrdhUserEntity.nxJrdhWxAvartraUrl}}" mode="aspectFill"/>
            <view class=" numberInput1" >
					{{item.nxJrdhSupplierEntity.jrdhUserEntity.nxJrdhWxNickName}}
					</view>
          </view>
				
				</view>
        <!-- </view> -->
        <!-- <view wx:if="{{item.gbDpbPayType == 1}}">
          <view class="flex_row_between p-20">
          <text class="explain">供货商:</text>
          <view class=" numberInput" bindtap="toSupplier">
					{{item.gbJrdhSupplierEntity.gbJrdhsSupplierName}}
					</view>
          </view>
				
				 </view> 
        </view>-->

       
			
			</view>

			<view class='btn-wrapper'>
				<view class="btn_row" >
					<text class='cancel-btn' bindtap="cancle" hover-class="hoverBtn">取消</text>
					<text class='confirm-btn' catchtap='confirm' hover-class="hoverBtn">确定</text>
				</view>
			</view>
		</view>

	</view>
</view>