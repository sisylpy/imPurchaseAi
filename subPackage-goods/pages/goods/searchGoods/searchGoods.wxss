.subcat-popup {
  position: fixed;
  left: 5vw;
  right: 5vw;/* 适当调整，避开导航栏 */
  background: #fff;
  border-radius: 32rpx;
  z-index: 1001;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.10);
  padding-bottom: 32rpx;
  animation: popupIn 0.2s;
}
@keyframes popupIn {
  from { transform: translateY(-30rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
.subcat-popup-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 32rpx 32rpx 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.subcat-bar,
.subcat-bar.expand {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}
.subcat-bar-scroll {
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
  /* background: #fff; */
  padding: 0 0 8rpx 0;
}
.subcat-tag {
  display: inline-block;
  vertical-align: middle;
  padding: 10rpx 20rpx;
  /* height: 58rpx; */
  margin: 15rpx 20rpx 15rpx 10rpx;
  border-radius: 24rpx;
  background: #fff;
  color: #333;
  font-size: 28rpx;
  border: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  transition: border-color 0.2s, color 0.2s;
}
.subcat-tag.active {
  border: 1rpx solid #ff2d2d;
  color: #ff2d2d;
  background: #fff;
}
.subcat-toggle {
  display: inline-block;
  vertical-align: middle;
  height: 58rpx;
  width: 58rpx;
  text-align: center;
  line-height: 58rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 50%;
}
.toggle-icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.subcat-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
}
.sticky-bar {
  position: sticky;
  top: 44px; /* 顶部导航栏高度，如有自定义导航栏请调整 */
  z-index: 10;
  background: #fff;
}

/* 展开/收起动画样式 */
.goods-detail-content {
  overflow: hidden;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  margin: 10rpx 20rpx;
  border: 1px solid #e9ecef;
}

.detail-inner {
  padding: 20rpx;
  animation: slideDown 0.3s ease-in-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 箭头图标旋转动画 */
.icon {
  transition: transform 0.3s ease-in-out;
}

.icon.rotated {
  transform: rotate(90deg);
}

/* 商品项容器样式 */
.goods-item-dep-wrap {
  position: relative;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 展开按钮样式 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  transition: all 0.3s ease;
}

.expand-btn:hover {
  background-color: #e0e0e0;
}

/* 详情内容样式 */
.detail-inner .flex-row {
  margin-bottom: 15rpx;
  padding: 8rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.detail-inner .flex-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .goods-detail-content {
    margin: 5rpx 10rpx;
  }
  
  .detail-inner {
    padding: 15rpx;
  }
}
