  font-weight: 700;
}


/* 其他库存信息卡片 */
.other-stock-card {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  padding: 15rpx;
  margin-top: 10rpx;
  border: 1rpx solid #dee2e6;
}

.other-stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 22rpx;
}

.other-stock-label {
  color: #666;
  font-weight: 500;
}

.other-stock-value {
  color: #333;
  font-weight: 600;
}

/* 卡片样式优化 */
.bg-light {
  background-color: #f7f7f7;
}

.bg-mainColor {
  background-color: #e8f4ff;
}

.radius-20 {
  border-radius: 20rpx;
}

/* 悬停效果 */
.hover {
  background-color: #f0f0f0;
  transition: background-color 0.2s ease;
}

/* 可点击的商品名称样式 */
.goods-name-clickable {
  color: #05c0a7;
  cursor: pointer;
  transition: color 0.2s ease;
}

.goods-name-clickable:hover {
  color: #048a7a;
  text-decoration: underline;
}

/* 部门信息区域样式 */
.department-section {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-left: 4rpx solid #05c0a7;
}

.department-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

/* AI分析卡片样式 */
.ai-analysis-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e9ecef;
  position: relative;
  overflow: hidden;
}

.ai-analysis-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #05c0a7 0%, #17a2b8 100%);
}

/* 卡片头部 */
.ai-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f1f3f4;
}

.ai-card-title {
  display: flex;
  align-items: center;
}

.ai-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.ai-title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.ai-analysis-time {
  font-size: 24rpx;
  color: #666;
  background: rgba(5, 192, 167, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 关键指标区域 */
.ai-metrics-section {
  margin-bottom: 25rpx;
}

.metrics-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.metric-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
}

.metric-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.2;
}

.metric-success {
  color: #28a745;
}

.metric-warning {
  color: #ffc107;
}

.metric-danger {
  color: #dc3545;
}

.metric-info {
  color: #17a2b8;
}

/* 区域标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
  cursor: pointer;
  transition: all 0.3s ease;
}

.section-header:active {
  background: rgba(5, 192, 167, 0.05);
  border-radius: 8rpx;
  margin: 0 -10rpx;
  padding: 20rpx 10rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.warning-icon,
.suggestion-icon,
.summary-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.toggle-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.toggle-icon.collapsed {
  transform: rotate(0deg);
}

/* 内容区域 */
.warnings-content,
.suggestions-content,
.summary-content {
  overflow: hidden;
  transition: all 0.3s ease;
  max-height: 0;
  opacity: 0;
}

.warnings-content.expanded,
.suggestions-content.expanded,
.summary-content.expanded {
  max-height: 1000rpx;
  opacity: 1;
  padding-top: 20rpx;
}

/* 警告信息样式 */
.ai-warnings-section {
  margin-bottom: 25rpx;
}

.warning-item {
  background: rgba(255, 193, 7, 0.1);
  border-left: 4rpx solid #ffc107;
  padding: 15rpx 20rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
}

/* 建议信息样式 */
.ai-suggestions-section {
  margin-bottom: 25rpx;
}

.suggestion-item {
  background: rgba(5, 192, 167, 0.1);
  border-left: 4rpx solid #05c0a7;
  padding: 15rpx 20rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #0c5460;
  line-height: 1.4;
}

/* 摘要信息样式 */
.ai-summary-section {
  margin-bottom: 0;
}

.summary-content {
  background: rgba(23, 162, 184, 0.1);
  border-left: 4rpx solid #17a2b8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #0c5460;
  line-height: 1.6;
  white-space: pre-line;
}


