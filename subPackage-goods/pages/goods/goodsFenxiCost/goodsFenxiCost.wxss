}

.stock-row::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 6rpx;
  height: 60%;
  background: linear-gradient(180deg, #e9ecef 0%, #e9ecef 100%);
  border-radius: 0 6rpx 6rpx 0;
  transform: translateY(-50%);
  transition: all 0.3s ease;
}

