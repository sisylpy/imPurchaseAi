


.del_btn{
  background-color: rgb(197, 197, 197);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 14rpx 40rpx;
  color: gray;
}

.del_btn.is-active{
  background-color: aqua;
  color: #000;


}

/* 供货商筛选器样式 */
.supplier-filter-container {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.supplier-filter-chip {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  background-color: #187e6e;
  border-radius: 40rpx;
  padding: 16rpx 20rpx;
  width: fit-content;
  min-width: 200rpx;
}

.supplier-filter-text {
  font-size: 28rpx;
  color: #fff;
  flex: 1;
  white-space: nowrap;
}

.supplier-filter-delete {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
  cursor: pointer;
}

.supplier-delete-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1); /* 将图标改为白色 */
}

/* 采购员筛选器特殊样式 */
.purchase-user-chip {
  background-color: #FF6B35; /* 橙色背景，与供货商筛选器区分 */
}








/* 筛选条件样式 */
.filter-section {
  display: flex;
  justify-content: space-around;
  padding: 10rpx;
  background-color: #f9f9f9;
}

.picker {
  padding: 10rpx;
  background-color: #e0e0e0;
  border-radius: 5rpx;
}

/* 数据详情列表样式 */
.details-section {
  
  background-color: #ffffff;
}

/* 表头固定样式 */
.details-header {
  position: sticky;
  top: 0;
  background-color: #ffffff;
  z-index: 10; /* 确保表头在内容上方 */
  display: flex;
  border-bottom: 1rpx solid #ddd;
}

.details-header, .details-row {
  display: flex;
  width: max-content; /* 确保内容宽度足够以实现水平滚动 */
  border-bottom: 1rpx solid #f0f0f0;
}

.details-cell {
  padding: 10rpx;
  text-align: center;
  white-space: nowrap;
  min-width: 40rpx; /* 根据内容调整宽度 */
}

.fix_width_one{
  width: 120rpx;
  border-right: 1px solid lightgray;
}

.fix_width_two{
  width: 160rpx;
  border-right: 1px solid lightgray;
  font-weight: 500;
  
}

/* 阴影效果 */
.shadow-effect {
  box-shadow: 5rpx 0 5rpx -3rpx rgba(0, 0, 0, 0.3); /* 添加右侧阴影 */
}


/* 商品信息头部样式 */
.goods-header {
  background-color: #f8f9fa;
  padding: 30rpx 40rpx;
  text-align: center;
  margin: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.goods-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 8rpx;
}

.goods-standard {
  font-size: 26rpx;
  color: #6c757d;
}

/* 表格容器样式 */
.table-container {
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 表格头部样式 */
.table-header {
  display: flex;
  background-color: #f8f9fa;
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 2rpx solid #e9ecef;
}

.header-cell {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  border-right: 1rpx solid #dee2e6;
}

.header-cell:last-child {
  border-right: none;
}

.date-column {
  flex: 1.2;
}

.store-column {
  flex: 1.4;
}

.order-column {
  flex: 1.8;
}

.delivery-column {
  flex: 1.2;
}

/* 表格内容样式 */
.table-content {
  background-color: #ffffff;
}

.date-group {
  border-bottom: 2rpx solid #f5f5f5;
}

.date-group:last-child {
  border-bottom: none;
}

/* 日期行样式 */
.date-row {
  display: flex;
  background-color: #f1f3f4;
  padding: 20rpx 0;
  align-items: center;
  position: sticky;
  top: 88rpx;
  z-index: 5;
  border-bottom: 1rpx solid #dee2e6;
}

.date-cell {
  flex: 3.2;
  padding: 0 16rpx;
  text-align: left;
}

.date-main {
  font-size: 24rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 4rpx;
}

.date-weekday {
  font-size: 24rpx;
  color: #7f8c8d;
}

.summary-cell {
  flex: 3.8;
  padding: 0 16rpx;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 16rpx;
}

.summary-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.summary-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #28a745;
  padding: 8rpx 16rpx;
}

/* 订单详情行样式 */
.order-rows {
  background-color: #ffffff;
}

.order-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
  transition: background-color 0.2s ease;
}

.order-row:hover {
  background-color: #f8f9fa;
}

.order-row:last-child {
  border-bottom: none;
}

.row-cell {
  flex: 1;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.row-cell.date-column {
  flex: 1.2;
}

.row-cell.store-column {
  flex: 1.4;
}

.row-cell.order-column {
  flex: 1.8;
}

.row-cell.delivery-column {
  flex: 1.2;
}

.store-name {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
}

/* 订货信息容器 */
.order-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.order-quantity {
  font-size: 28rpx;
  color: #495057;
  font-weight: 600;
  padding: 8rpx 12rpx;
}

.delivery-quantity {
  font-size: 30rpx;
  font-weight: bold;
  padding: 10rpx 16rpx;
  border-radius: 12rpx;
}

.delivery-quantity.highlight {
  color: #28a745;
  font-weight: bold;
}

.user-name {
  font-size: 24rpx;
  color: #474747;
  font-weight: 400;
  padding: 4rpx 0;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header-cell,
  .row-cell {
    padding: 16rpx 8rpx;
    font-size: 24rpx;
  }
  
  .date-main {
    font-size: 28rpx;
  }
  
  .goods-title {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.table-container {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.order-row {
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 空状态样式 */
.empty-state {
  min-height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
}

.empty-container {
  text-align: center;
  max-width: 500rpx;
  animation: slideUp 0.5s ease-out;
}

.empty-icon-wrapper {
  margin-bottom: 40rpx;
  position: relative;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
  filter: grayscale(20%);
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #6c757d;
  margin-bottom: 20rpx;
}

.empty-description {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.empty-suggestions {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  border-left: 4rpx solid #6c757d;
}

.suggestion-item {
  display: block;
  font-size: 26rpx;
  color: #5a6c7d;
  line-height: 2;
  margin-bottom: 8rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

/* 增强的交互效果 */
.order-row {
  position: relative;
  transition: all 0.3s ease;
}

.order-row:active {
  background-color: #e9ecef;
  transform: scale(0.99);
}

.delivery-quantity.highlight {
  transition: all 0.3s ease;
}

.delivery-quantity.highlight:hover {
  color: #1e7e34;
}

/* 表头粘性效果增强 */
.table-header {
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.date-row {
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
}

/* 数据加载时的骨架屏效果 */
.loading-skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 优化小屏幕显示 */
@media (max-width: 600rpx) {
  .goods-header {
    margin: 10rpx;
    padding: 20rpx 30rpx;
  }
  
  .table-container {
    margin: 10rpx;
  }
  
  .header-cell,
  .row-cell {
    padding: 12rpx 6rpx;
    font-size: 22rpx;
  }
  
  .date-main {
    font-size: 26rpx;
  }
  
  .date-weekday {
    font-size: 20rpx;
  }
  
  .summary-value {
    font-size: 26rpx;
    padding: 6rpx 12rpx;
  }
  
  .delivery-quantity {
    font-size: 26rpx;
    padding: 8rpx 12rpx;
  }
  
  .user-name {
    font-size: 22rpx;
    max-width: 80rpx;
  }
  
  .empty-title {
    font-size: 32rpx;
  }
  
  .empty-description {
    font-size: 26rpx;
  }
  
  .suggestion-item {
    font-size: 24rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .goods-header {
    background-color: #343a40;
    border-color: #495057;
  }
  
  .goods-title {
    color: #f8f9fa;
  }
  
  .goods-standard {
    color: #adb5bd;
  }
  
  .table-container {
    background-color: #212529;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  }
  
  .table-header {
    background-color: #343a40;
    border-bottom-color: #495057;
  }
  
  .header-cell {
    color: #f8f9fa;
    border-right-color: #495057;
  }
  
  .date-row {
    background-color: #495057;
    border-bottom-color: #6c757d;
  }
  
  .order-row {
    border-bottom-color: #495057;
  }
  
  .order-row:hover {
    background-color: #343a40;
  }
  
  .store-name {
    color: #f8f9fa;
  }
  
  .order-quantity {
    background-color: #343a40;
    border-color: #495057;
    color: #adb5bd;
  }
  
  .delivery-quantity.highlight {
    background-color: #495057;
  }
  
  .user-name {
    background-color: #343a40;
    color: #adb5bd;
  }
  
  .summary-value {
    background-color: #343a40;
    border-color: #495057;
    color: #f8f9fa;
  }
  
  .empty-title {
    color: #f8f9fa;
  }
  
  .empty-description {
    color: #adb5bd;
  }
  
  .empty-suggestions {
    background-color: #343a40;
    border-left-color: #6c757d;
  }
  
  .suggestion-item {
    color: #adb5bd;
  }
}


