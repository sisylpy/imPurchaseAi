/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-show {
  opacity: 1;
  visibility: visible;
}

.modal-hide {
  opacity: 0;
  visibility: hidden;
}

.modal-container {
  background: #ffffff;
  border-radius: 24rpx;
  width: 600rpx;
  max-width: 90%;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.9);
  transition: all 0.3s ease;
  overflow: hidden;
}

.modal-show .modal-container {
  transform: scale(1);
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  position: relative;
}

.modal-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.modal-icon-img {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
}

.modal-content {
  padding: 40rpx;
}

.modal-message {
  text-align: center;
}

.modal-text-primary {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-text-warning {
  display: block;
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: 500;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  padding: 0 40rpx 40rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modal-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.modal-btn:active::before {
  left: 100%;
}

.modal-btn-cancel {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
}

.modal-btn-cancel:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.modal-btn-confirm {
  background: linear-gradient(135deg, #276afa 0%, #1e5ce6 100%);
  box-shadow: 0 4rpx 16rpx rgba(39, 106, 250, 0.3);
}

.modal-btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(39, 106, 250, 0.4);
}

.modal-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.modal-btn-cancel .modal-btn-text {
  color: #6c757d;
}

.modal-btn-confirm .modal-btn-text {
  color: #ffffff;
}

/* ============ 订单状态标签样式 ============ */
.status-badge {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
  margin-top: 8rpx;
  width: fit-content;
}

.status-badge:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 付款完成状态 */
.status-settled {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #4CAF50;
  border-color: rgba(76, 175, 80, 0.2);
}

/* 待付款状态 */
.status-pending {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #FF9800;
  border-color: rgba(255, 152, 0, 0.2);
}

/* 处理中状态 */
.status-processing {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  color: #2196F3;
  border-color: rgba(33, 150, 243, 0.2);
}

/* 已取消状态 */
.status-cancelled {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #F44336;
  border-color: rgba(244, 67, 54, 0.2);
}

