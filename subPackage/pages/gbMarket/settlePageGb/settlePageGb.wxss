


/* ============ 全选功能栏样式 ============ */

.select-all-bar {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(74, 144, 226, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.select-all-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #4A90E2 0%, #05c0a7 50%, #FF9800 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.select-all-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.select-all-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-all-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.select-all-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.select-count {
  font-size: 22rpx;
  color: #4A90E2;
  font-weight: 500;
}

.select-all-actions {
  display: flex;
  align-items: center;
}

.clear-selection-btn {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(255, 107, 107, 0.05) 100%);
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  transition: all 0.3s ease;
}

.clear-selection-btn:active {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 107, 107, 0.1) 100%);
  transform: scale(0.98);
}

.clear-text {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 500;
}



.bill-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.bill-item:hover {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

/* 选中状态的账单项 */
.bill-item.bill-item-selected {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.12) 0%, rgba(74, 144, 226, 0.08) 100%) !important;
  border: 2rpx solid rgba(74, 144, 226, 0.4) !important;
  box-shadow: 0 6rpx 24rpx rgba(74, 144, 226, 0.2) !important;
  transform: translateY(-2rpx);
}

.bill-item.bill-item-selected .bill-number {
  background: linear-gradient(135deg, #4A90E2 0%, #2E7CE6 100%) !important;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.4) !important;
}

.bill-item.bill-item-selected .bill-amount {
  color: #4A90E2 !important;
  font-weight: 700 !important;
}

.bill-item.bill-item-selected .bill-arrow {
  opacity: 1 !important;
  transform: translateX(4rpx);
}

/* 更明显的选中效果 */
.bill-item-selected {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.2) 0%, rgba(74, 144, 226, 0.15) 100%) !important;
  border: 3rpx solid #4A90E2 !important;
  box-shadow: 0 8rpx 32rpx rgba(74, 144, 226, 0.3) !important;
  transform: translateY(-3rpx);
  position: relative;
}

.bill-item-selected::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.05) 0%, rgba(74, 144, 226, 0.02) 100%);
  border-radius: 16rpx;
  pointer-events: none;
}

.bill-item-selected .bill-number {
  background: linear-gradient(135deg, #4A90E2 0%, #2E7CE6 100%) !important;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.5) !important;
  color: #ffffff !important;
}

.bill-item-selected .bill-amount {
  color: #4A90E2 !important;
  font-weight: 700 !important;
  text-shadow: 0 2rpx 4rpx rgba(74, 144, 226, 0.2);
  font-size: 38rpx !important;
}

.bill-item-selected .bill-arrow {
  opacity: 1 !important;
  transform: translateX(6rpx);
  filter: brightness(0) saturate(100%) invert(48%) sepia(79%) saturate(2476%) hue-rotate(346deg) brightness(118%) contrast(119%);
}

.bill-item-selected .bill-week {
  background: rgba(74, 144, 226, 0.1) !important;
  color: #4A90E2 !important;
  border: 1rpx solid rgba(74, 144, 226, 0.3) !important;
}

.bill-checkbox {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.bill-content {
  flex: 1;
  display: flex;
