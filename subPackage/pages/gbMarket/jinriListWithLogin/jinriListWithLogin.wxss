}

.bill-arrow-icon {
  width: 16rpx;
  height: 16rpx;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.bill-arrow-section:hover {
  background: rgba(74, 144, 226, 0.15);
  transform: scale(1.1);
}

.bill-arrow-section:hover .bill-arrow-icon {
  opacity: 0.8;
}

