



/* ============ 供货商订单列表美化样式 ============ */

/* 订单状态区域 */
.bill-status-section {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.status-badge {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.status-unread {
  background: #FFEBEE;
  color: #F44336;
}
.status-preparing {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFCCCC 100%);
  color: #FF6B6B;
  border-color: rgba(255, 107, 107, 0.2);
  
}

.status-preparing .status-dot {
  background: #2196F3;
}

.status-pending {
  background: #FFF3E0;
  color: #FF9800;
}

.status-pending .status-dot {
  background: #FF9800;
}
.status-unpaid {
  
  background: #E3F2FD;
  color: #2196F3;
  
}

.status-pending {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #FF9800;
  border-color: rgba(255, 152, 0, 0.2);
}

.status-settled {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #4CAF50;
  border-color: rgba(76, 175, 80, 0.2);
}

.status-badge:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}


/* 订单列表容器 */
.supplier-bills-container {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 0 0 20rpx 20rpx;
  /* padding: 0 30rpx 30rpx 30rpx; */
  margin: 0 20rpx 30rpx 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-top: none;
  backdrop-filter: blur(10rpx);
  position: relative;
  overflow: hidden;
  margin-top: 20rpx;
}

/* 订单项 */
.supplier-bill-item {
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

/* 每个订单项的彩色线条 - 多彩渐变 */
.supplier-bill-item:nth-child(1)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #4ECDC4 50%, #45B7D1 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(2)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #4ECDC4 0%, #45B7D1 50%, #96CEB4 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(3)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #45B7D1 0%, #96CEB4 50%, #FFEAA7 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(4)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #96CEB4 0%, #FFEAA7 50%, #DDA0DD 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(5)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #FFEAA7 0%, #DDA0DD 50%, #FF6B6B 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(6)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #DDA0DD 0%, #FF6B6B 50%, #4ECDC4 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:nth-child(7)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #4ECDC4 50%, #45B7D1 100%);
  border-radius: 16rpx 16rpx 0 0;
}

/* 超过7个时循环使用多彩渐变 */
.supplier-bill-item:nth-child(n+8)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #A8E6CF 0%, #FFD93D 50%, #6BCF7F 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.supplier-bill-item:last-child {
  margin-bottom: 0;
}

/* 悬停效果 */
.supplier-bill-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  border-color: rgba(255, 107, 107, 0.2);
}

/* 激活效果 */
.supplier-bill-item:active {
  transform: scale(0.98);
}

.supplier-bill-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  border-color: rgba(255, 107, 107, 0.2);
}

/* 订单类型标签区域 */
.bill-type-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-type-tag {
  display: flex;
  align-items: center;
}

.bill-type-text {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.tag-return {
  background: #f5576c !important;
  color: #fdfdfd !important;
  border: 1rpx solid #e9ecef !important;
}

.tag-auto {
