

/* 订单列表样式 */
.bill-list {
  padding: 20rpx;
  background: #f8f9fa;
}

.bill-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.bill-item:hover {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

.bill-checkbox {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.bill-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx 24rpx 0;
  min-height: 120rpx;
}

.bill-hover {
  background: #f8f9fa;
}

.bill-header {
  display: flex;
  align-items: center;
  flex: 1;
}

.bill-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #c2c2c2 0%, #525252 100%);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.bill-date-section {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.bill-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.bill-week {
  font-size: 24rpx;
  color: #7f8c8d;
  background: #ecf0f1;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  width: fit-content;
}

.bill-type-tag {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.bill-amount-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bill-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #276afa;
  text-align: right;
}

.bill-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.bill-content:active .bill-arrow {
  transform: translateX(4rpx);
  opacity: 1;
}

/* 空状态样式优化 */
.empty_view {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  padding: 80rpx 40rpx;
}

.empty_image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
  margin-bottom: 32rpx;
}

.empty_view .big {
  font-size: 32rpx;
  color: #7f8c8d;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty_view .small {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-show {
  opacity: 1;
  visibility: visible;
}

.modal-hide {
  opacity: 0;
  visibility: hidden;
}

.modal-container {
  background: #ffffff;
  border-radius: 24rpx;
  width: 600rpx;
  max-width: 90%;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.9);
  transition: all 0.3s ease;
  overflow: hidden;
}

.modal-show .modal-container {
  transform: scale(1);
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  position: relative;
}

.modal-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.modal-icon-img {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
}

.modal-content {
  padding: 40rpx;
}

.modal-message {
  text-align: center;
}

.modal-text-primary {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-text-warning {
  display: block;
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: 500;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  padding: 0 40rpx 40rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modal-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.modal-btn:active::before {
  left: 100%;
}

.modal-btn-cancel {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
}

.modal-btn-cancel:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.modal-btn-confirm {
  background: linear-gradient(135deg, #276afa 0%, #1e5ce6 100%);
  box-shadow: 0 4rpx 16rpx rgba(39, 106, 250, 0.3);
}

.modal-btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(39, 106, 250, 0.4);
}

.modal-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.modal-btn-cancel .modal-btn-text {
  color: #6c757d;
}

.modal-btn-confirm .modal-btn-text {
  color: #ffffff;
}

