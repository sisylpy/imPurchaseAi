  color: #495057;
}

.payment-options {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  width: 100%;
}

.radio-option {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 20rpx 16rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.radio-option:hover {
  /* border-color: #667eea; */
  background: #ffffff;
}

.radio-text {
  font-size: 28rpx;
  color: #495057;
  margin-left: 16rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  border: none;
  cursor: pointer;
}

.secondary-btn {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #e9ecef;
}

.secondary-btn:hover {
  background: #e9ecef;
  color: #495057;
}

.primary-btn {
  background: #007bff;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.2);
}

.primary-btn:hover {
  background: #0056b3;
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 123, 255, 0.3);
}

.disabled-btn {
  background: #e9ecef;
  color: #adb5bd;
  cursor: not-allowed;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
}

.btn-hover {
