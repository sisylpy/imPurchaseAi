<back-navbar style="height: {{navBarHeight}}rpx;" title="管理" avatar="/images/back-gray.png" button-text="设置" bindnavbuttontap="toBack"></back-navbar>


<view class="flex-column" style="margin-top: {{navBarHeight}}rpx;">

  <view class="emptyView {{nxDisArr.length == 0  ? 'is-active' : ''}}" style="height: {{windowHeight - 360}}rpx; text-align:center;margin-top:160rpx;">
    <view class="font-lg  empty_view">
      <view class="center-content">
        <image class="empty_image" src="../../../../images/xiuxi-2.png"></image>
        <text class="big">暂时配送商</text>
        <text class="small darkgray pb-20 pt-20">这里只显示没有配送的订单</text>
      </view>
    </view>
  </view>



  <view class="flex-column p-20 border-bottom" wx:for="{{orderArr}}">

    <view class="flex-column " style="width: {{windowWidth - 40}}rpx;  ">
      <view class="flex-row">
        <text class="">{{item.gbDoApplyArriveDate}}</text>
      </view>
      <view class="flex-row-default">
        <view class="flex-row half-row">
          <text class="flex-l-right">门店：</text>
          <text>{{item.gbDepartmentEntity.gbDepartmentName}}</text>
        </view>
        <view class="flex-row half-row">
          <text class="flex-l-right">订货：</text>
          <text>{{item.gbDoQuantity}}{{item.gbDoStandard}}</text>
        </view>
      </view>
      <view class="flex-row-default pt-20 pb-20">
        <view class="flex-row-default third-row">
          <text class="flex-l-right">出货：</text>
          <text>{{item.gbDoWeight}}{{disGoods.gbDgGoodsStandardname}}</text>
        </view>

        <view class="flex-row-default third-row">
          <view class="flex-column">
            <view class="flex-row">
              <text class="flex-l-right">单价：</text>
              <text>{{item.gbDoPrice}}元/{{disGoods.gbDgGoodsStandardname}}</text>
            </view>
            <view class="flex-row" wx:if="{{item.gbDoPriceDifferent !== '0' && item.gbDoPriceDifferent !== '0.0' && item.gbDoPriceDifferent !== null}}">
              <image src="{{item.gbDoPriceDifferent > 0 ? '../../../../images/arrow_up_right_square_fill.png' : '../../../../images/arrow_down_right_square_fill.png'}}" mode="aspectFill" class="icon" />
              <text>{{tool.getDifferentPrice(item.gbDoPriceDifferent) }}元/{{disGoods.gbDgGoodsStandardname}}</text>
            </view>

          </view>

        </view>
        <view class="flex-row-default third-row">
          <text class="flex-l-right">小计：</text>
          <text>{{item.gbDoSubtotal}}元</text>
        </view>
      </view>

    </view>

  </view>
</view>