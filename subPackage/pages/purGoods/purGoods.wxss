

/* ============ 操作按钮 ============ */
.action-buttons {
  padding: 32rpx 24rpx;
  background: #ffffff;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: all 0.2s ease;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: #ffffff;
  border: 2rpx solid #4a90e2;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.25);
}

.action-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #357abd 0%, #2c5aa0 100%);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.35);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 700;
}
