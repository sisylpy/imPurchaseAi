<wxs src="../../../../utils/fn.wxs" module="tool" />
<import src='../../../../template/dailyFenxi/dailyFenxi.wxml' />



<view class="flex flex-column">

<back-navbar style="height: {{navBarHeight}}rpx;" title="成本" avatar="/images/back-gray.png" button-text="设置" bindnavbuttontap="toBack"></back-navbar>


<!--  top -->
<view class=" flex-row-between pl-20 pr-20 border-bottom bg-white">
  <view class="flex-row">
    <view class="p-20" bindtap="toDatePage">
      <image src="../../../../images/calender.png" class="icon"></image>
    </view>
    <view class="flex-column">
      <view class="flex-row" wx:if="{{startDate == stopDate}}">
        <view class=" small" wx:if="{{startDate}}"> {{tool.transferDateString(startDate)}}</view>
      </view>
      <view class="flex-row" wx:else>
        <view class=" small" wx:if="{{startDate}}"> {{tool.transferDateString(startDate)}}</view>
        <text class="with-s-padding">-</text>
        <view class=" small" wx:if="{{stopDate}}">{{tool.transferDateString(stopDate)}}</view>
      </view>
    </view>
  </view>

  <view class="flex-row p-20" bindtap="toFilter">
    <image src="{{searchDepList.length > 0 ? '../../../../images/filter.png' : '../../../../images/filter-3-fill.png'}}" class="icon mr-20"></image>
  </view>
</view>


<block wx:if="{{searchDepList.length == 0}}">
  <view class="flex-column">
    <scroll-view scroll-y style="height:{{windowHeight - 100 - navBarHeight}}rpx; " wx:if="{{total > 0}}">
      <view class="flex-column">
        <view class="flex-column pl-20 pr-20 mt-20">
          <view class="plr-20">成本为“售出成本 + 损耗成本 + 废弃成本”</view>
          <view class="plr-20  mainColor font-bold" style="font-size: 50rpx;">{{total}}元</view>
        </view>
        <scroll-view scroll-x="true" class="nav" scroll-with-animation="{{true}}" scroll-left="{{leftWidth}}" style="width: {{windowWidth - 40}}rpx; padding-left: 30rpx;  ">
          <view class="top_item swiper1_top_item mr-20 bg-white" style="width: {{windowWidth / 3  + 100}}rpx;" bindtap="toThree" data-type="sales">
            <view class="flex-row-default p-20">
              <image src="../../../../images/ai-profit.png" mode="aspectFill" class="icon-lg mr-20" />
              <view class="flex-column">
                <text class="mainColor font-lg">售出成本</text>
                <view class="flex-row">
                  <text class="text-secondary middle">{{salesTotal}}元</text>
                  <text class="text-secondary extremeSmall">{{tool.getProducePercent(salesTotal,total)}}%</text>

                </view>
              </view>
            </view>
          </view>

          <view class="top_item swiper1_top_item mr-20 bg-white " style="width: {{windowWidth / 3 + 100}}rpx;" bindtap="toThree" data-type="loss">
            <view class="flex-row-default p-20">
              <image src="../../../../images/money-ticket.png" mode="aspectFill" class="icon-lg mr-20" />
              <view class="flex-column">
                <text class="mainColor font-lg">损耗成本</text>
                <view class="flex-row">
                  <text class="text-secondary middle">{{lossTotal}}元</text>
                  <text class="text-secondary extremeSmall">{{tool.getProducePercent(lossTotal,total)}}%</text>
                </view>

              </view>
            </view>
          </view>
          <view class="top_item swiper1_top_item bg-white" style="width: {{windowWidth/ 3  + 100}}rpx;" bindtap="toThree" data-type="waste">
            <view class="flex-row-default p-20">
              <image src="../../../../images/Time-3.png" mode="aspectFill" class="icon-lg mr-20" />
              <view class="flex-column">
                <text class="mainColor font-lg">废弃成本</text>
                <view class="flex-row">
                  <text class="text-secondary middle mr-10">{{wasteTotal}}元</text>
                  <text class="text-secondary extremeSmall">{{tool.getProducePercent(wasteTotal,total)}}%</text>

                </view>

              </view>
            </view>
          </view>
        </scroll-view>
        <template is="dailyFenxi" data="{{ outArr:outArr,windowWidth:windowWidth, windowHeight: windowHeight,total:total, salesTotal: salesTotal, lossTotal: lossTotal, wasteTotal:wasteTotal,navBarHeight:navBarHeight, type:type, fenxiType: fenxiType}}"></template>

      </view>
    </scroll-view>
    <view wx:else style="height:{{windowHeight - 200 - navBarHeight}}rpx; ">
      <view class="flex flex-column center-content" style="margin-top: 100rpx;">
        <image class="icon-lg" src="../../../../images/file-empty.png"></image>
        <text class="font-lg">暂无成本</text>
      </view>
    </view>
  </view>
</block>

<block wx:else="">

<block wx:if="{{searchDepList.length == 1}}">
  <view class="flex-row border-bottom">
    <scroll-view scroll-x="true" show-scrollbar="false" enhanced="true" class="nav_dep" scroll-with-animation="{{true}}" scroll-left="{{leftWidthDep}}" style="width: {{windowWidth - 40 }}rpx; ">
      <text id="dep_fixed" data-id="-1" class="dep_item  {{itemIndexDep == 0 ? 'is-active' : ''}}" data-index='0' data-total="{{whichTotalDep}}" bindtap="onTab1ClickDep" data-item="all">{{resultDepList[0].gbDepartmentAttrName}}({{resultDepList[0].depCostGoodsTotalString}}元)</text>
    
    </scroll-view>
  </view>
  <scroll-view scroll-y style="height:{{ windowHeight - 360 - navBarHeight}}rpx;">

<view class="flex-column">
  <scroll-view scroll-y style="height:{{windowHeight - 280 - navBarHeight}}rpx; " wx:if="{{total > 0}}">
    <view class="flex-column">
      <view class="flex-column pl-20 pr-20 margin-top">
        <text class="with-slr-padding">成本为“售出成本 + 损耗成本 + 废弃成本”</text>
        <text class="with-slr-padding  mainColor five-weight" style="font-size: 50rpx;">{{total}}元</text>
      </view>
      <scroll-view scroll-x="true" class="nav" scroll-with-animation="{{true}}" scroll-left="{{leftWidth}}" style="width: {{windowWidth - 40}}rpx; padding-left: 30rpx;  ">
        <view class="top_item swiper1_top_item mr-20 bg-white" style="width: {{windowWidth / 2  + 100}}rpx;" bindtap="toThree" data-type="sales">
          <view class="flex-row-default">
            <image src="../../../../images/ai-profit.png" mode="aspectFill" class="icon-lg" />
            <view class="flex-column p-20">
              <text class="mainColor font-lg">售出成本</text>
              <view class="flex-row">
                <text class="text-secondary middle">{{salesTotal}}元</text>
                <text class="text-secondary extremeSmall">{{tool.getProducePercent(salesTotal,total)}}%</text>

              </view>
            </view>
          </view>
        </view>

        <view class="top_item swiper1_top_item mr-20 bg-white" style="width: {{windowWidth / 2 + 100}}rpx;" bindtap="toThree" data-type="loss">
          <view class="flex-row-default">
            <image src="../../../../images/money-ticket.png" mode="aspectFill" class="icon-lg" />
            <view class="flex-column p-20">
              <text class="mainColor font-lg">损耗成本</text>
              <view class="flex-row">
                <text class="text-secondary middle">{{lossTotal}}元</text>
                <text class="text-secondary extremeSmall">{{tool.getProducePercent(lossTotal,total)}}%</text>
              </view>

            </view>
          </view>
        </view>
        <view class="top_item swiper1_top_item bg-white" style="width: {{windowWidth/ 2  + 100}}rpx;" bindtap="toThree" data-type="waste">
          <view class="flex-row-default">
            <image src="../../../../images/Time-3.png" mode="aspectFill" class="icon-lg" />
            <view class="flex-column p-20">
              <text class="mainColor font-lg">废弃成本</text>
              <view class="flex-row">
                <text class="text-secondary middle mr-10">{{wasteTotal}}元</text>
                <text class="text-secondary extremeSmall">{{tool.getProducePercent(wasteTotal,total)}}%</text>

              </view>

            </view>
          </view>
        </view>
      </scroll-view>
      <template is="dailyFenxi" data="{{ outArr:outArr,windowWidth:windowWidth, windowHeight: windowHeight,total:total, salesTotal: salesTotal, lossTotal: lossTotal, wasteTotal:wasteTotal,navBarHeight:navBarHeight, type:type, fenxiType: fenxiType}}"></template>

    </view>
  </scroll-view>
  <view wx:else style="height:{{windowHeight - 400 - navBarHeight}}rpx; ">
    <view class="empty_View flex-column-center">
      <image class="empty_image_2" src="../../../../images/file-empty.png"></image>
      <text class="font-lg">暂无成本</text>
    </view>
  </view>
</view>



</scroll-view>

</block>


