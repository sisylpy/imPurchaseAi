

page{
  background-color: rgb(241, 241, 241);
}

.navbar {
  display: flex;
  position: relative;
  z-index: 100;
  /* top: 0; */
  width: 100%;
  /* border-bottom: 1rpx solid #e5e5e5; */
  /* background-color: #0d4d43; */
  height: 80rpx;
}

.navbar .navbar-item {
  position: relative;
  display: block;
  flex: 1;
  /* padding: 13px 0; */
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #425042;
}

.navbar .bar-item-on {
  color: #187e6e;
  
}

.navbar .navbar-title {
  display: inline-block;
  font-size: 32rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.navbar .bar-item-on .navbar-title {
  color: #187e6e;
  font-weight: 600;
}


.navbar .navbar-slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 20rpx;
  width: 100rpx;
  height: 8rpx;
  background-color: #187e6e;
  /* border-bottom: 1px solid lightgray; */
  /* box-shadow: 0 0 0 2rpx #b8b9b981; */

  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}



.title {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 26rpx;
  color: #666;
}
.submit-btn {
  width: 100%;
  background-color: #ff7200;
  color: #fff;
  font-size: 34rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none; /* 如果需要去掉默认边框 */
  text-align: center; /* 文字居中 */
  box-sizing: border-box; /* 确保内边距不会影响宽度 */
}

