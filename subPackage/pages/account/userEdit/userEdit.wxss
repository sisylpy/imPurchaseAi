.index_top{
  height: 260rpx;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  background-color: rgb(0, 86, 216);
}




/* 提交按钮 */
.submit-section {
  margin-top: 40rpx;
  padding: 0 40rpx;
}
.submit-btn {
  width: 100%;
  background-color: #ff7200;
  color: #fff;
  font-size: 34rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none; /* 如果需要去掉默认边框 */
  text-align: center; /* 文字居中 */
  box-sizing: border-box; /* 确保内边距不会影响宽度 */
}

/* 库存显示周期选择弹窗样式 */
.stock-cycle-modal {
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.cycle-options {
  padding: 20rpx 0;
}

.cycle-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.cycle-option:last-child {
  border-bottom: none;
}

.cycle-option:active {
  background-color: #f0f0f0;
  transform: scale(0.98);
}

.cycle-option-selected {
  background-color: #e3f2fd;
  border-left: 6rpx solid #2196f3;
}

.cycle-option-selected .cycle-text {
  color: #1976d2;
  font-weight: 600;
}

.cycle-text {
  font-size: 32rpx;
  color: #333;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
}

