/* 虚线效果 */
.dotted-line {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28%;
  width: 1px;
  border-left: 2px dashed #ddd;
  height: 100%;
}

/* 通过伪元素创建圆点 */
.dotted-line::before,
.dotted-line::after {
  content: '';
  position: absolute;
  width: 10px;
  height: 10px;
  background: #f5f5f5;
  border-radius: 50%;
  left: -5px;
}

.dotted-line::before {
  top: -5px;
}

.dotted-line::after {
  bottom: -5px;
}


