<wxs src="../../../../utils/fn.wxs" module="tool" />
<import src='../../../../template/dailyFenxi/dailyFenxi.wxml' />


<view class="flex flex-column">
<back-navbar style="height: {{navBarHeight}}rpx;" title="日期范围" avatar="/images/back-gray.png" button-text="设置" bindnavbuttontap="toBack"></back-navbar>


<!--  top -->
<view class=" flex-row-between pl-20 pr-20 border-bottom-shadow bg-white">
  <view class="flex-row">
    <view class="p-20" bindtap="toDatePage">
      <image src="../../../../images/calender.png" class="icon"></image>
    </view>
    <view class="flex-column">
      <view wx:if="{{startDate == stopDate}}">
        <view class=" small  {{startDate !== null ? 'is-active' : ''}} "> {{startDate !== '-1' ? tool.getAttrDate(startDate) : ''}}
        </view>
      </view>
      <view class="flex-row" wx:else>
        <view class=" small  {{startDate !== null ? 'is-active' : ''}} "> {{startDate !== '-1' ? tool.getAttrDate(startDate) : ''}}
        </view>
        <text class="p-10" wx:if="{{startDate !== '-1'}}">-</text>
        <view class=" small  {{stopDate !== null ? 'is-active' :''}}">{{stopDate !== null ? tool.getAttrDate(stopDate) : ''}}
        </view>
      </view>
    </view>
  </view>
  <view class="flex-row p-20" bindtap="toFilter">
    <image src="{{issueDepId > 0 ? '../../../../images/filter.png' : '../../../../images/filter-3-fill.png'}}" class="icon margin-right"></image>
  </view>

</view>

<!-- ../tab -->

<block wx:if="{{issueDepId > 0 || nxDisId > 0 }}">
  
  <view class="flex-column-center  ">
   <view class="flex-row filterMy" >
    <text class=" margin-right">{{searchDepName}}</text>
    <image src="/images/del-2.png"  mode="aspectFill" class="icon"  bindtap="delSearch" />
   </view>
</view>
<view class="flex-column p-20" style="height: {{windowHeight - 470}}rpx;margin-top: 60rpx;">
    <ec-canvas id="mychart" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
  </view>
</block>

 
<!-- subPackage/pages/data/echartsPage/fenxiPage/fenxiPage -->

  <view class=" {{priceGoodsArr.length == 0  ? 'show' : 'hide'}}"
      style="height: {{windowHeight - 400 }}rpx; text-align:center;">
      <view class="center-content flex-column-center" style="  margin-top: 200rpx;">
        <image class="empty_image" src="../../../../images/cg.png"></image>
        <text class="big">无数据</text>
      </view>
    </view>

</view>
