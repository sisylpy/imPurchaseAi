/* Tab切换样式 */
.tab-container {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #007aff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

/* Swiper容器样式 */
.swiper-container {
  width: 100%;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

/* 操作弹窗样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.modal {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  max-height: 60vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  display: flex;
  flex-direction: column;
}

.operation-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
}

.operation-item:last-child {
  border-bottom: none;
}

.operation-item.delete {
  color: #ff3b30;
}

.operation-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/* 通用样式 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-row-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

.bg-white {
  background-color: #fff;
}

.p-10 {
  padding: 10rpx;
}

.p-20 {
  padding: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.pb-10 {
  padding-bottom: 10rpx;
}

.button-container {
  width: 80rpx;
  height: 80rpx;
  background-color: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-container .icon {
  width: 40rpx;
  height: 40rpx;
}

.form_body {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form_body_dep {
  border-left: 6rpx solid #007aff;
}

.form_body_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form_body_colar {
  color: #007aff;
}

.form_body_line_dep {
  height: 2rpx;
  background-color: #007aff;
  margin-top: 20rpx;
}

.btnClick {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnClick .icon {
  width: 30rpx;
  height: 30rpx;
}

.hover {
  opacity: 0.7;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .tab-item {
    font-size: 26rpx;
  }
  
  .modal {
    padding: 30rpx;
  }
  
  .operation-item {
    font-size: 28rpx;
  }
}


