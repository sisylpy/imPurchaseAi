<wxs src="../../../../utils/fn.wxs" module="tool" />



<view class="flex flex-column">


<back-navbar style="height: {{navBarHeight}}rpx;" title="搜索门店" avatar="/images/back-gray.png" button-text="设置" bindnavbuttontap="toBack"></back-navbar>


<view class="flex-column ">
    <view class="p-20 flex-row-between">
    <text>选择:</text>
    <text bindtap="toSave">确定</text>
    </view>
    
   

    <view class="flex-column">
      <view class="p-20 text-secondary">供货商:</view>
      <view class="border-bottom flex-row-between bg-white p-20 font-lg" wx:for="{{supplierArr}}"  bindtap="selectSupplier"  data-item="{{item}}" hover-class="hover" data-index="{{index}}">
        <view class="flex-row" style="width: {{windowWidth - 100}}rpx;" catchtap="selectSupplier" data-index="{{index}}">
          <text class="mr-10">{{index + 1}}.</text>
        <text class=' '>{{item.nxJrdhsSupplierName}}</text> 
        </view>
        <view class="flex-row" catchtap="selectSupplier" data-index="{{index}}">
        <image src="{{item.isSelected ? '../../../../images/correct.png' : ''}}" class="icon"></image>
      
      </view>
     
    </view>

    </view>


    <view class="flex-column">
      <view class="p-20 text-secondary">采购员:</view>
      <view class="border-bottom flex-row-between bg-white p-20 font-lg" wx:for="{{userArr}}" bindtap="selectPurchaser"  data-item="{{item}}" hover-class="hover" data-index="{{index}}">
       
        <view class="flex-row" catchtap="selectPurchaser" data-index="{{index}}">
        <image src='{{url + item.gbDuWxAvartraUrl }}' class="member_url mr-20"></image>

          <view class="flex-column">
            <view class="flex-row">
          <text class="font-md">{{item.gbDuWxNickName}}</text>
          <text wx:if="{{item.gbDepartmentUserId == userInfo.gbDepartmentUserId}}">(你自己)</text>
        </view>
       
        </view>
       
      </view>

        <view class="flex-row" catchtap="selectPurchaser" data-index="{{index}}">
        <image src="{{item.isSelected ? '../../../../images/correct.png' : ''}}" class="icon"></image>
      
      </view>
     
    </view>

    </view>
   
 

</view>

</view>