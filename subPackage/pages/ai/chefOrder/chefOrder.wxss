/** 弹窗动画和风格完全仿 Slack **/

page {
  width: 100vw;
  height: 100vh;
  background: #f8f8f8;
  position: relative;
}

/* 圆形按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 60rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #00c48c;
  color: #fff;
  font-size: 68rpx;
  /* text-align: center; */
  display: flex;
  justify-content: center;
  align-items: center;
  /* line-height: 104rpx; */
  box-shadow: 0 6rpx 24rpx 0 #59245744;
  z-index: 99;
  transition: all 0.25s;
}


.fab-plus {
  width: 60rpx;
  height: 60rpx;
}

/* 蒙层 */
.popup-mask {
  position: fixed;
  z-index: 100;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(70,60,70,0.60);
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

/* 弹窗容器 */
.popup-box {
  margin: 0 60rpx 110rpx 0;
  border-radius: 40rpx;
  overflow: hidden;
  background: transparent;
  box-shadow: 0 8rpx 48rpx 0 #0002;
  transform-origin: 90% 90%; /* 右下角 */
}

/* 弹窗内容 */
.popup-content {
  background: #fff;
  border-radius: 36rpx;
  overflow: hidden;
  padding: 36rpx 36rpx 28rpx 36rpx;
  min-width: 540rpx;
}


/* 项目列表 */
.item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.icon_back {
  width: 60rpx;
  height: 60rpx;
  border-radius: 18rpx;
  background: #f6f4fa;
  margin-right: 24rpx;
}
button {
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background: transparent !important;
  width: auto;
  height: auto;
  line-height: normal;
  box-shadow: none !important;
  border-radius: 0 !important;
  min-width: 0 !important;
}
button::after {
  border: none !important;
}



.title {
  font-weight: bold;
  font-size: 36rpx;
  color: #222;
  margin-bottom: 4rpx;
}
.desc {
  font-size: 26rpx;
  color: #666;
}

/* Message大按钮 */
.msg-btn-box {
  margin-top: 16rpx;
}
.msg-btn {
  width: 100%;
  height: 86rpx;
  background: #00c48c;
  border-radius: 28rpx;
  color: #fff;
  font-size: 38rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.msg-icon {
  width: 40rpx;
  height: 40rpx;
  background: url('https://img.icons8.com/ios-filled/50/ffffff/edit.png') no-repeat center/36rpx 36rpx;
  margin-right: 14rpx;
}
.msg-text { font-size: 38rpx; }


