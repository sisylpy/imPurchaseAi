.left {
  width: 18vw;
}

.dep_left_item{
  background-color: #eee;
  padding: 50rpx 20rpx;
  border-bottom: 1px solid lightgray;
  text-align: center;
}

.dep_left_item.left-active{
  background-color: #FFF;
}
.left-item {
  padding: 30rpx 20rpx;
  background-color: #eee;
}

.left-active {
  background-color: #fff;
  border-left: 6rpx solid #187e6e;
}

.chart-container {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.chart-title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.chart-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.chart-unit {
  font-size: 24rpx;
  color: #999;
}

.chart-canvas-container {
  width: 100%;
  height: 300rpx;
}