/* 蒙版 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色 */
  z-index: 999; /* 确保在弹出层下方 */
}

/* 弹出层容器 */
.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80%;
  background-color: #ffffff;
  box-shadow: 0px -10px 30px rgba(0, 0, 0, 0.1);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 1000; /* 弹出层高于蒙版 */
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.popup-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 内容区域 */
.popup-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 表单行 */
.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 32rpx;
  color: #666;
  width: 200rpx;
}

.form-input {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}

/* 单选按钮 */
.radio-group {
  display: flex;
  align-items: center;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.radio-item text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 底部按钮 */
.popup-footer {
  padding: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background-color: #187e6e;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
