.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}
.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}
.form-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 34rpx;
