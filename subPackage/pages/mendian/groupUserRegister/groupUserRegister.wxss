

.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}
.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}
.form-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 34rpx;
  /* color: #666; */
}

.avatar-preview-wrap {
  margin-top: 20rpx;
  font-size: 34rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.avatar-preview {
  width: 100rpx;
  height: 100rpx;
  margin-left: 12rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  object-fit: cover;
}

/* 提交按钮 */
.submit-section {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.submit-btn.is-active{
  background-color: #ff7200;
  color: #fff;
}
.submit-btn {
  width: 100%;
  background-color: #72706f;
  color: #fff;
  font-size: 34rpx;
  padding: 10rpx;
  border-radius: 12rpx;
  border: none; /* 如果需要去掉默认边框 */
  text-align: center; /* 文字居中 */
  box-sizing: border-box; /* 确保内边距不会影响宽度 */
}




.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.weui-input{
  border-bottom: 1px solid gray;
  width: 100%;
  padding: 20rpx 20rpx;
}
